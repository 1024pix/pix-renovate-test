<header role="banner">
  <NavbarHeader />
</header>

<main id="main" class="user-tutorials global-page-container" role="main">
  <Tutorials::Header @onTriggerFilterButton={{this.showSidebar}} @shouldShowFilterButton={{false}} />
  <div class="user-tutorials-content global-page-container__streched-content">
    {{#if @model.savedTutorials.meta.pagination.rowCount}}
      <Tutorials::Cards @tutorials={{@model.savedTutorials}} @afterRemove={{this.refresh}} />
      <PixPagination
        @pagination={{@model.savedTutorials.meta.pagination}}
        @pageOptions={{this.pageOptions}}
        @locale={{this.intl.primaryLocale}}
        @isCondensed="true"
      />
    {{else}}
      <Tutorials::SavedEmpty />
    {{/if}}
  </div>
</main>

<Footer />