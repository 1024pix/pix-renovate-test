{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":semanticCommits",
    "schedule:earlyMondays",
    "local>1024pix/pix-renovate-test//renovate/presets/group-dependencies-non-major",
    "local>1024pix/pix-renovate-test//renovate/presets/group-by-directory",
    "local>1024pix/pix-renovate-test//renovate/presets/group-global-dependencies"
  ],
  "prConcurrentLimit": 5,
  "rangeStrategy": "pin",
  "labels": ["dependencies"],
  "stabilityDays": 7,
  "commitMessagePrefix": "[BUMP]",
  "rebaseWhen": "never",
  "schedule": "every 1 hour every weekday",
  "enabled": true,
  "includeForks": true
}