{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>1024pix/renovate-config:default"],
  "regexManagers": [
    {
        "fileMatch": ["^.circleci/*.yml$"],
        "matchStrings": ["(?<depName>cimg/node):(?<currentValue>.*?)-browsers\\n",
        "(?<depName>cimg/node):(?<currentValue>.*?)\\n"],
        "datasourceTemplate": "cimg/node",
        "versioningTemplate": "node"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^(node|cimg/node)$"],
      "groupName": "node",
      "rangeStrategy": "bump",
      "versioning": "node"
    },
    {
      "matchPackageNames": ["^cimg/node$"],
      "matchManagers": ["circleci"],
      "enabled":false
    }
  ],
  "enabled": true,
  "includeForks": true
}
