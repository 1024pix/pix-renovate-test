{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",  
    "packageRules": [
            {
              "matchPackagePatterns": ["eslint"],
              "groupName": "eslint"
            },
            {
              "matchPackagePatterns": ["node"],
              "groupName": "node"
            },
            {
              "matchPackagePatterns": ["redis"],
              "groupName": "redis"
            },
            {
              "matchPackagePatterns": ["postgres"],
              "groupName": "postgres"
            }
      ]
}