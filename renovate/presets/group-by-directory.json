{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "excludePackagePatterns": ["(node|eslint|redis|postgres)"],
            "addLabels": ["dir-specific-pr"],
            "additionalBranchPrefix": "{{#if parentDir}}{{parentDir}}{{else}}global{{/if}}-",
            "commitMessageSuffix": "{{#if parentDir}}({{parentDir}}){{else}}(global){{/if}}"
        }
    ]
}