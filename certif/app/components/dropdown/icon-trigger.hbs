<div id="icon-trigger" class="dropdown" ...attributes>
  <PixIconButton
    @iconName={{@icon}}
    @ariaLabel={{@ariaLabel}}
    class="{{@dropdownButtonClass}}"
    @triggerAction={{this.toggle}}
    @size="small"
    @color="dark-grey"
  />
  <Dropdown::Content @display={{this.display}} @close={{this.close}} class="{{@dropdownContentClass}}">
    {{yield}}
  </Dropdown::Content>
</div>